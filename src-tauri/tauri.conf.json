{
  "productName": "Tektra",
  "version": "0.1.0",
  "identifier": "com.tektra.app",
  "build": {
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tektra AI Assistant",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": false
  }
}