# Tektra AI Assistant - Environment Configuration Template
# Copy this file to .env and configure for your deployment

# =============================================================================
# Application Configuration
# =============================================================================
TEKTRA_ENV=production
TEKTRA_DEBUG=false
TEKTRA_VERSION=1.0.0
TEKTRA_PORT=8000
TEKTRA_HOST=0.0.0.0

# =============================================================================
# Security Configuration
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_jwt_secret_here
SECRET_KEY=your_secret_key_here

# Database password
POSTGRES_PASSWORD=your_postgres_password_here

# Redis password
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# Database Configuration
# =============================================================================
TEKTRA_DATABASE__URL=postgresql://tektra:${POSTGRES_PASSWORD}@postgres:5432/tektra
TEKTRA_DATABASE__POOL_SIZE=20
TEKTRA_DATABASE__SSL_REQUIRED=false

# =============================================================================
# Redis Configuration
# =============================================================================
TEKTRA_REDIS__URL=redis://redis:6379/0
TEKTRA_REDIS__PASSWORD=${REDIS_PASSWORD}
TEKTRA_REDIS__MAX_CONNECTIONS=50

# =============================================================================
# Performance Configuration
# =============================================================================
TEKTRA_MAX_MEMORY_MB=4096
TEKTRA_CACHE_SIZE_MB=1024
TEKTRA_MAX_WORKERS=10

# =============================================================================
# Agent Configuration
# =============================================================================
TEKTRA_MAX_AGENTS=20
TEKTRA_AGENTS__AGENT_TIMEOUT_SECONDS=600
TEKTRA_AGENTS__SANDBOX_ENABLED=true

# =============================================================================
# Monitoring Configuration
# =============================================================================
TEKTRA_METRICS_PORT=8090
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_grafana_password_here

# =============================================================================
# Reverse Proxy Configuration
# =============================================================================
HTTP_PORT=80
HTTPS_PORT=443
DOMAIN=localhost

# =============================================================================
# Build Configuration
# =============================================================================
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse --short HEAD 2>/dev/null || echo "unknown")

# =============================================================================
# SSL/TLS Configuration (for production)
# =============================================================================
# SSL_CERT_PATH=/etc/ssl/certs/tektra.crt
# SSL_KEY_PATH=/etc/ssl/private/tektra.key
# SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt

# =============================================================================
# CORS Configuration
# =============================================================================
TEKTRA_SECURITY__CORS_ORIGINS=["https://your-domain.com"]

# =============================================================================
# Log Configuration
# =============================================================================
TEKTRA_MONITORING__LOG_LEVEL=INFO
TEKTRA_MONITORING__LOG_FORMAT=json

# =============================================================================
# External Services (Optional)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=true

# Slack webhook for alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# =============================================================================
# Development Overrides (for docker-compose.dev.yml)
# =============================================================================
# DEV_TEKTRA_DEBUG=true
# DEV_TEKTRA_ENV=development
# DEV_LOG_LEVEL=DEBUG